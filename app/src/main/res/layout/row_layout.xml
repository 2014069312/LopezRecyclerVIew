<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/tvCodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivLogo"
        android:fontFamily="sans-serif-condensed"
        android:text="Code Name"
        android:textColor="#58D68D"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCodeName"
        android:layout_below="@+id/tvCodeName"
        android:fontFamily="serif"
        android:paddingRight="10dp"
        android:text="Version"
        android:textColor="#000000"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvVersion"
        android:layout_toRightOf="@+id/tvVersion"
        android:fontFamily="serif"
        android:text="API"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvVersion"
        android:layout_below="@+id/tvVersion"
        android:fontFamily="serif"
        android:lineSpacingExtra="2sp"
        android:text="Release Date"
        android:textColor="#000000"
        android:textStyle="italic" />

</RelativeLayout>